option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: WallStreet.routing.application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
  aws:elbv2:listener:80:
    DefaultProcess: http
    ListenerEnabled: 'true'
    Protocol: HTTP
    Rules: ws
  aws:elb:listener:443:
    InstancePort: '80'
    InstanceProtocol: HTTP
    ListenerEnabled: 'true'
    ListenerProtocol: HTTPS
    PolicyNames: null
    SSLCertificateId: arn:aws:acm:us-west-1:062403101350:certificate/a10deffa-c931-423c-a4d6-ba585d2c62b2
  aws:elbv2:listenerrule:ws:
    PathPatterns: /ws/*
    Process: websocket
    Priority: 1
  aws:elasticbeanstalk:environment:process:http:
    Port: '80'
    Protocol: HTTP
  aws:elasticbeanstalk:environment:process:websocket:
    Port: '5000'
    Protocol: HTTP

commands:
    01_postgres_activate:
        command: sudo amazon-linux-extras enable postgresql10
    02_postgres_install:
        command: sudo yum install -y postgresql-devel

container_commands:
  01_postgresql:
    command: sudo yum -y install gcc python-setuptools python-devel postgresql-devel
  02_migrate:
    command: source $PYTHONPATH/activate && python manage.py migrate --noinput
  03_collectstatic:
    command: "source $PYTHONPATH/activate  && python manage.py collectstatic --noinput"
